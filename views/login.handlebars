
 <div class="container mt-5">
    <div class="row">
      <!-- Login Form -->
      <div class="col-md-6">
        <h2 class="mb-4">Login</h2>
        <form class="login-form" id="login-form">
          <div class="form-group">
            <label for="email-login mb-2">Email:</label>
            <input class="form-control" type="email" id="email-login" placeholder="Enter your email" required>
          </div>
          <div class="form-group">
            <label for="password-login mb-2 ">Password:</label>
            <input class="form-control" type="password" id="password-login" placeholder="Enter your password" required>
          </div>
          <button class="btn btn-primary mt-4" id="login-btn" type="submit">Login</button>
        </form>
      </div>

      <!-- Signup Form -->
      <div class="col-md-6">
        <h2 class="mb-4">Signup</h2>
        <form class="signup-form" id="signup-form">
          <div class="form-group">
            <label for="name-signup">Name:</label>
            <input class="form-control" type="text" id="name-signup" placeholder="Enter your name" required>
          </div>
          <div class="form-group">
            <label for="email-signup">Email:</label>
            <input class="form-control" type="email" id="email-signup" placeholder="Enter your email" required>
          </div>
          <div class="form-group">
            <label for="password-signup">Password:</label>
            <input class="form-control" type="password" id="password-signup" placeholder="Enter your password" required>
          </div>
          <button class="btn btn-primary mt-4" id="signup-btn" type="submit">Signup</button>
        </form>
      </div>
    </div>
  </div>
  <script src="js/login.js"></script>