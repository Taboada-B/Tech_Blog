<main class="container">
  <nav class="navbar container-fluid col-6">
    <a class="btn btn-default" role="button" href="/">Home</a> 
    <a class="btn btn-default" role="button" id="btnLogout" href="/login">Logout</a>
  </nav>
<h1>Dashboard</h1>
  
  <form id="new-post-form">
    <div class="field">
      <label class="label" for="post-title">Title:</label>
      <div class="control m-2">
        <textarea name="title" class="form-control" rows="1" id="post-title" placeholder="Enter post title"></textarea>
      </div>
      {{!-- <div class="control m-2">
        <input class="input" type="text" id="post-title" name="title" placeholder="Enter post title" required>
      </div> --}}
    </div>

    <div class="field">
      <label class="label" for="post-content">Content:</label>
      <div class="control m-2">
        <textarea name="content" class="form-control " rows="3" id="post-content"  placeholder="Enter post content"
          required></textarea>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <button class="button is-primary" type="submit">Submit Post</button>
      </div>
    </div>
  </form>
</main>
